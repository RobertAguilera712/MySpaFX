               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </TableView>
         </children>
      </VBox>
   </content>
   <stylesheets>
      <URL value="@styles/icons.css" />
      <URL value="@styles/styles.css" />
   </stylesheets>
