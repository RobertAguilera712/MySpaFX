                  <TableColumn fx:id="productPrice" prefWidth="112.0" text="Precio" />
                  <TableColumn fx:id="productStatus" prefWidth="114.0" text="Estatus" />
                  <TableColumn fx:id="productActions" prefWidth="135.0" text="Acciones" />
